<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.intoverflown.pos.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.intoverflown.pos.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.intoverflown.pos.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
    <activity
        android:id="@+id/loginActivity"
        android:name="com.intoverflown.pos.ui.signin.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />
    <activity
        android:id="@+id/resetPwdActivity"
        android:name="com.intoverflown.pos.ui.resetpassword.ResetPwdActivity"
        android:label="activity_reset_pwd"
        tools:layout="@layout/activity_reset_pwd" />
    <activity
        android:id="@+id/signUpActivity"
        android:name="com.intoverflown.pos.ui.signup.SignUpActivity"
        android:label="activity_sign_up"
        tools:layout="@layout/activity_sign_up" />
    <activity
        android:id="@+id/salesAndExpenses"
        android:name="com.intoverflown.pos.ui.salesnexpenses.SalesAndExpenses"
        android:label="activity_sales_and_expenses"
        tools:layout="@layout/activity_sales_and_expenses" />
</navigation>