<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    android:orientation="vertical"
    tools:context=".ui.inventory.addproduct.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_solid_blue"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/addBackBtn"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_back_white_24dp"
                android:contentDescription="@string/back_btn" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-130dp"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/resetTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/add_product"
                        android:textColor="@color/text_color_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/addProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/resetTxt"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="yes"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/product_name"
                        android:inputType="text"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/addUnitPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addProductName"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/unit_price_ksh"
                        android:importantForAutofill="yes"
                        android:inputType="number"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/addPurchasePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addUnitPrice"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/purchase_price_ksh"
                        android:importantForAutofill="yes"
                        android:inputType="number"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/addQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addPurchasePrice"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/quantity"
                        android:importantForAutofill="yes"
                        android:inputType="text"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/addDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addQuantity"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/product_description"
                        android:importantForAutofill="yes"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/addReOrderLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/addDescription"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints=""
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:hint="@string/re_order_level"
                        android:importantForAutofill="yes"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/addSaveBtn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/addReOrderLevel"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_round_btn"
                        android:drawableEnd="@drawable/baseline_arrow_right_alt_white_36dp"
                        android:fontFamily="sans-serif"
                        android:padding="0dp"
                        android:text="@string/save"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:shapeAppearance="@drawable/gradient_solid_blue"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resetTagLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="sans-serif"
                android:gravity="bottom"
                android:text="@string/tag_line"
                android:textColor="@color/text_color_blue"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

