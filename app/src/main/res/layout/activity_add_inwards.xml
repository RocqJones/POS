<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg"
    tools:context=".ui.returngoods.postreturns.AddInwardsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/gradient_solid_blue"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:background="@drawable/baseline_arrow_back_white_24dp"
                android:contentDescription="@string/back_btn" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-80dp"
            android:orientation="vertical"
            android:padding="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/font_bold"
                        android:text="@string/add_return_inwards"
                        android:textColor="@color/text_color_blue"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/itemMerchantBranch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/heading"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/merchant_branch"/>

                        <Spinner
                            android:id="@+id/selectMerchantBranch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemSupplier"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/itemMerchantBranch"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/supplier"/>

                        <Spinner
                            android:id="@+id/selectSupplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemCustomer"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/itemSupplier"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/customer"/>

                        <Spinner
                            android:id="@+id/selectCustomer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/font_regular"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/itemOrderDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/itemCustomer"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/order_date"/>

                        <EditText
                            android:id="@+id/selectOrderDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"
                            android:inputType="datetime"
                            android:hint="@string/_2021_01_01"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:ems="10"
                            android:fontFamily="@font/font_regular"
                            android:background="@color/white"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/orderQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemOrderDate"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/font_regular"
                        android:hint="@string/quantity"
                        android:importantForAutofill="yes"
                        android:inputType="number"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/itemDateDelivered"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/orderQuantity"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/date_delivered"/>

                        <EditText
                            android:id="@+id/selectDateDelivered"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"
                            android:inputType="datetime"
                            android:hint="@string/_2021_01_01"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:ems="10"
                            android:fontFamily="@font/font_regular"
                            android:background="@color/white"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/returnedQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemDateDelivered"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/font_regular"
                        android:hint="@string/returned_quantity"
                        android:importantForAutofill="yes"
                        android:inputType="number"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <LinearLayout
                        android:id="@+id/itemReturnedDate"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/returnedQuantity"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/font_regular"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_color_blue"
                            android:text="@string/returned_date"/>

                        <EditText
                            android:id="@+id/selectReturnedDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="20dp"
                            android:inputType="datetime"
                            android:hint="@string/_2021_01_01"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:ems="10"
                            android:fontFamily="@font/font_regular"
                            android:background="@color/white"
                            android:focusable="false"
                            android:focusableInTouchMode="false" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/returnedReason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/itemReturnedDate"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/bg_edit_text"
                        android:ems="10"
                        android:fontFamily="@font/font_regular"
                        android:hint="@string/returned_reason"
                        android:importantForAutofill="yes"
                        android:inputType="textMultiLine"
                        android:padding="5dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/text_color_blue"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/createReturnInwards"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/btn_default_height"
                        android:layout_below="@id/returnedReason"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/bg_round_btn"
                        android:fontFamily="@font/font_regular"
                        android:text="@string/create_return_inwards"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/resetTagLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/font_regular"
                android:gravity="bottom"
                android:text="@string/tag_line"
                android:textColor="@color/text_color_blue"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>