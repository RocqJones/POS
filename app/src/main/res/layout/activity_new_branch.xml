<!--                            android:paddingEnd="20dp"-->
<!--                            android:importantForAutofill="no" />-->

                        <Button
                            android:id="@+id/regMerchantBtn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/btn_default_height"
                            android:layout_below="@id/regMerchantEmailAddress"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginEnd="10dp"
                            android:drawableEnd="@drawable/baseline_arrow_right_alt_white_36dp"
                            android:background="@drawable/bg_round_btn"
                            android:fontFamily="sans-serif"
                            android:padding="0dp"
                            android:text="@string/register"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            app:shapeAppearance="@drawable/gradient_solid_blue" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:text="@string/tag_line"
                    android:textColor="@color/text_color_blue"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

