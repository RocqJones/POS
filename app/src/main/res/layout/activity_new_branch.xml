<!--                            android:id="@+id/regMerchantConfirmPassword"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:padding="5dp"-->
<!--                            android:layout_below="@id/regMerchantPassword"-->
